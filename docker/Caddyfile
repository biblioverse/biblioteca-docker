{
    frankenphp
    order php_server before file_server
    servers {
        protocols h1 h2 h3
    }
    tls internal
}

:8080 {
    root * /var/www/html/public
    encode zstd br gzip
    try_files {path} index.php

    handle_errors {
        respond "{http.error.status_code} {http.error.status_text}"
    }
    php_server {
        index index.php
    }

    file_server
}

:8443 {
    root * /var/www/html/public
    encode zstd br gzip
    try_files {path} index.php

    handle_errors {
        respond "{http.error.status_code} {http.error.status_text}"
    }
    php_server {
        index index.php
    }

    file_server
}